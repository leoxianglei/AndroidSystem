<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SimpleActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日头条demo" />

    <com.zero.toutiaodemo.view.ColorChangeTextView
        android:id="@+id/color_change_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C8FE2E"
        android:padding="8dp"
        app:direction="left"
        app:progress="0"
        app:text="享学课堂"
        app:text_color="#000000"
        app:text_color_change="#FF0000"
        app:text_size="50sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onStartLeft"
        android:text="StartLeft" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onStartRight"
        android:text="StartRight" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onStartTop"
        android:text="StartTop" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onStartBottom"
        android:text="StartBottom" />


